# ============================================================================
# ENVIRONMENT VARIABLES - EXAMPLE FOR LOCAL DEVELOPMENT & PRODUCTION
# ============================================================================
# Copy this file to .env and fill in actual values

# ============================================================================
# DJANGO CORE
# ============================================================================

# SECRET_KEY: Generate with:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here-replace-me

# DEBUG: Set to False in production
DEBUG=False

# ALLOWED_HOSTS: Comma-separated list of domains
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ENVIRONMENT: 'development' or 'production'
ENVIRONMENT=development

# ============================================================================
# DATABASE
# ============================================================================

# DATABASE_URL format: mysql://user:password@host:port/dbname
# Leave empty to use SQLite for local development
# Railway example: mysql://root:password@container.railway.internal:3306/tutoring_db
DATABASE_URL=

# Local MySQL (alternative format, uncomment if not using DATABASE_URL)
# MYSQL_HOST=127.0.0.1
# MYSQL_PORT=3306
# MYSQL_USER=tutoring_user
# MYSQL_PASSWORD=your_strong_password
# MYSQL_DATABASE=tutoring_db

# ============================================================================
# GEMINI API (for AI/RAG features)
# ============================================================================

# Get your key from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================================================
# CHROMA DB (Vector Database Path)
# ============================================================================

# Default is ./chroma_db in the project root
CHROMA_DB_PATH=./chroma_db

# ============================================================================
# CORS SETTINGS (for frontend communication)
# ============================================================================

# Frontend origin (e.g., http://localhost:3000 for dev, https://app.example.com for prod)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# OPTIONAL: MONITORING & LOGGING
# ============================================================================

# Sentry (error tracking) - uncomment to enable
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
